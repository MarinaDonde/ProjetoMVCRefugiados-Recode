@model refugiados.Models.ONG

@{
    ViewData["Title"] = "Edit";
}

<div class="corpodosite">
<h1>Editar</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdONG" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resumo" class="control-label"></label>
                <input asp-for="Resumo" class="form-control" />
                <span asp-validation-for="Resumo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servico1" class="control-label"></label>
                <input asp-for="Servico1" class="form-control" />
                <span asp-validation-for="Servico1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servico2" class="control-label"></label>
                <input asp-for="Servico2" class="form-control" />
                <span asp-validation-for="Servico2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servico3" class="control-label"></label>
                <input asp-for="Servico3" class="form-control" />
                <span asp-validation-for="Servico3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servico4" class="control-label"></label>
                <input asp-for="Servico4" class="form-control" />
                <span asp-validation-for="Servico4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="URL" class="control-label"></label>
                <input asp-for="URL" class="form-control" />
                <span asp-validation-for="URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-secondary ancora"><i class="bi bi-pencil-square"></i> Editar</button> 
            </div>
        </form>
        <button class="btn btn-secondary" type="button"><a asp-action="Index" class="ancora"><i class="bi bi-arrow-left-square"></i> Voltar</a></button>      
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
