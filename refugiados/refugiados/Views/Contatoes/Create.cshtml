        <img src="~/Imagens/venezuelanos2.jpg" class="rounded mx-auto d-block img20" alt="Venezuelanos no Brasil">
    </div>
    <div class="corpodosite">
        <h1>Entre em contato:</h1>
        <div class="mb-3">
          <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Nome" class="form-label p43">Nome:</label>
                <input asp-for="Nome" type="text" class="form-control i1" id="exampleFormControlInput1" placeholder="Insira o seu nome">
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Nacionalidade" class="form-label p44">País de origem</label>
                <input asp-for="Nacionalidade" type="text" class="form-control i2" id="exampleFormControlInput1" placeholder="Insira o seu país de origem">
            </div>
            <div class="mb-3">
                <label asp-for="Cidade" class="form-label p45">Cidade</label>
                <input asp-for="Cidade" type="text" class="form-control i3" id="exampleFormControlInput1" placeholder="Insira a cidade em que você se encontra">
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control i4" id="exampleFormControlInput1" placeholder="usuario@exemplo.com">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Telefone" class="form-label p46">Telefone</label>
                <input asp-for="Telefone" type="text" class="form-control i5" id="exampleFormControlInput1" placeholder="Insira o seu telefone">                
            </div>
            <div class="mb-3">
                <label asp-for="Mensagem" class="form-label p47">Deixe sua mensagem:</label>
                <textarea asp-for="Mensagem" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="d-grid gap-2">
                <input class="btncontato" type="submit" value="Enviar"/>
            </div> 
          </form>
          </div>           
    </div>

