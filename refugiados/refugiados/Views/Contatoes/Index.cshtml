@model IEnumerable<refugiados.Models.Contato>

@{
    ViewData["Title"] = "Index";
}

<div>
<h1>Índice</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mensagem)
            </td>
            <td>
                <button class="btn btn-info" type="button" ><a asp-action="Edit" asp-route-id="@item.IdContato" class="ancora">Editar</a></button>
                <button class="btn btn-info" type="button" ><a asp-action="Details" asp-route-id="@item.IdContato" class="ancora">Detalhes</a></button>
                <button class="btn btn-info" type="button" ><a asp-action="Delete" asp-route-id="@item.IdContato" class="ancora">Excluir</a></button>
            </td>
        </tr>
}
    <div>
        <button class="btn btn-info" type="button" ><a asp-action="adm" asp-controller="Home" class="ancora">Voltar</a></button>
    </div>
    </tbody>
</table>
</div>
