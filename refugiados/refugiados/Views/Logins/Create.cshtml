@model refugiados.Models.Login

@{
    ViewData["Title"] = "Create";
}
<div class="corpodosite">
<h1>Cadastrar</h1>

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-secondary" type="submit"><i class="bi bi-save"></i></button>         
            </div>
        </form>
    </div>
</div>

<div>
    <button class="btn btn-secondary" type="button" ><a asp-action="Index" class="ancora"><i class="bi bi-arrow-left-square"></i></a></button>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
