@page
@model LoginModel

<header>
    <div id="topheader">
        <div><img src="~/Imagens/Pana.png" alt="Logo" id="logo"></div>
        <div class="socialicons">
            <a href="https://www.facebook.com/" target="_blank"><i class="bi bi-facebook sociali"></i></a>
            <a href="https://www.instagram.com/" target="_blank"><i class="bi bi-instagram sociali"></i></a>
            <a href="https://web.whatsapp.com/" target="_blank"><i class="bi bi-whatsapp sociali"></i></a>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary navpersonalizada">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active personalnavconfig" aria-current="page" asp-action="Index" asp-controller="Home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="cultura_br" asp-controller="Home">Cultura Brasileira</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="ajuda_br" asp-controller="Home">Onde Encontrar Ajuda?</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="Create" asp-controller="Contatoes">Entre em contato</a>
                    </li>
                    <li>
                        <a class="nav-link active" aria-current="page" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-person-circle"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="loginPage">
    <section class="form">
        <form id="account" method="post">
            <div class="divdoicone"><i class="bi bi-person-circle loginicon"></i></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary"><a asp-action="adm" asp-controller="Home" class="ancora">Entrar</a></button>
            </div>
            <div>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar novo Usuário</a>
                </p>
            </div>
        </form>
    </section>
</div>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
